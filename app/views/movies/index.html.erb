<% @movies.each do |movie| %>
  <section class="movie">
    <div class="summary">
      <h2>
<!--        This line does the same thing as the line below it, only more verbose-->
        <%#= link_to(movie.title, movie_path(movie)) %>
        <%= link_to movie.title, movie %>
      </h2>
      <h3>
        <%= total_gross(movie) %>
      </h3>
      <p>
        <%= truncate(movie.description, length: 150, separator: ' ') %>
      </p>

      <%= render 'shared/stars', percent: movie.average_review %>

    </div>
  </section>
<% end %>

<% if current_user_admin? %>
  <section class="admin">
    <%= link_to "Add New Movie", new_movie_path, class: "button" %>
  </section>
<% end %>